# NYT-to-Library CatKey Generator â€” .env.example
# Copy to .env and fill in your values. Do NOT commit a real .env.

# --- Email (required) ---
SENDER_EMAIL="your_email@example.com"
SENDER_PASSWORD="your_app_password"
RECEIVER_EMAILS="recipient1@example.com,recipient2@example.com"

# --- NYT API (required) ---
NYT_API_KEY="your-nyt-api-key"
# Comma-separated list names, e.g.:
NYT_LIST_NAMES="hardcover-fiction,hardcover-nonfiction,picture-books,childrens-middle-grade-hardcover,young-adult-hardcover"

# --- Catalog base URL (required) ---
# Example for LCPL:
# https://lcpl.ent.sirsi.net/client/en_US/lcpl
CATALOG_BASE_URL="https://catalog.yourlibrary.org/client/en_US/yourlib"

# --- Optional settings ---
NYT_OUTPUT_DIR="./reports"
NYT_LOG_DIR="./logs"
CHROMEDRIVER_PATH="/usr/local/bin/chromedriver"   # set if chromedriver is not on PATH

SMTP_SERVER="smtp.gmail.com"
SMTP_PORT="587"

NYT_DEBUG="0"            # 1 = verbose logging to console
NYT_NO_EMAIL="0"         # 1 = skip sending emails

NYT_MAX_RETRIES="3"
NYT_REQUEST_TIMEOUT="15"
NYT_PAGE_TIMEOUT="20"
