# nyt_catkey.env — Example configuration (.env style) — single catalog
# REQUIRED
SENDER_EMAIL="YOUR_SENDER_EMAIL@example.com"
SENDER_PASSWORD="YOUR_APP_PASSWORD"
RECEIVER_EMAILS="recipient1@example.com,recipient2@example.com"
NYT_API_KEY="YOUR_NYT_API_KEY"
CATALOG_BASE_URL="https://lcpl.ent.sirsi.net/client/en_US/lcpl"

# OPTIONAL
NYT_OUTPUT_DIR="$HOME/catkey_exports"
NYT_LOG_DIR="$HOME/logs"
CHROMEDRIVER_PATH="/usr/local/bin/chromedriver"
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT="587"
NYT_DEBUG="0"
NYT_NO_EMAIL="0"
NYT_MAX_RETRIES="3"
NYT_REQUEST_TIMEOUT="15"
NYT_PAGE_TIMEOUT="20"

